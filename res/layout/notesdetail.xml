<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:weightSum="1">
    <TextView android:text="Note Detail" android:layout_height="wrap_content" android:id="@+id/textView1" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_weight="0.05" android:layout_width="match_parent"></TextView>
    <TextView android:text="Description" android:layout_weight="0.05" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView_Description"></TextView>
    <EditText android:layout_width="match_parent" android:id="@+id/editDescription" android:layout_height="wrap_content" android:layout_weight="0.05" >
        <requestFocus></requestFocus>
    </EditText>
    <TextView android:text="Content" android:layout_height="wrap_content" android:id="@+id/textView_Content" android:layout_weight="0.07" android:layout_width="match_parent"></TextView>
    <EditText android:layout_width="match_parent" android:id="@+id/editContent" android:layout_height="wrap_content" android:layout_weight="0.05"></EditText>
    <Button android:id="@+id/button_Ok" android:text="OK" android:layout_width="match_parent" android:layout_height="wrap_content" android:onClick="onBtnClick"></Button>
    
</LinearLayout>
